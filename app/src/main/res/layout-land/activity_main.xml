<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ivos.quiz_app.MainActivity"
    android:padding="@dimen/small_margin"
    android:background="@color/primary_dark_color"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/Main_background_image_Czech_Flag"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flag3"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/user_name"
        style="@style/CategoryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:hint="@string/name_request"
        android:inputType="text"
        android:paddingStart="@dimen/big_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CZ_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="24dp"
        android:text="@string/cz_en"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/image_question_textbuton"
        style="@style/CategoryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:text="@string/Image_questions"
        android:textColor="@color/MainButtonsText"
        android:visibility="visible"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <TextView
        android:id="@+id/text_question_textbuton"
        style="@style/CategoryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"
        android:text="@string/Text_questions"
        android:textColor="@color/MainButtonsText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_question_textbuton" />

    <TextView
        android:id="@+id/sound_question_textbuton"
        style="@style/CategoryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/Sound_questions"
        android:textColor="@color/MainButtonsText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_question_textbuton" />

    <TextView
        android:id="@+id/high_score"
        style="@style/CategoryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/High_score"
        android:textColor="@color/MainButtonsText"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/total_score"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/total_score"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/total_score"
        app:layout_constraintHorizontal_bias="0.4" />

    <TextView
        android:id="@+id/total_score"
        style="@style/CategoryStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Total_score"
        android:textColor="@color/MainButtonsText"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <TextView
        android:id="@+id/high_score_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/init_zero"
        android:textColor="@color/MainButtonsText"
        app:layout_constraintBottom_toBottomOf="@+id/high_score"
        app:layout_constraintRight_toRightOf="@+id/total_score_counter"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/high_score"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="@+id/total_score_counter" />

    <TextView
        android:id="@+id/image_score_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:gravity="center_horizontal"
        android:text="@string/init_zero"
        android:textColor="@color/MainButtonsText"
        app:layout_constraintBottom_toBottomOf="@+id/image_question_textbuton"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_question_textbuton"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="@string/score"
        android:textColor="@color/MainButtonsText"
        app:layout_constraintBottom_toTopOf="@+id/image_question_textbuton"
        app:layout_constraintLeft_toLeftOf="@+id/image_score_counter"
        app:layout_constraintRight_toRightOf="@+id/image_score_counter" />

    <TextView
        android:id="@+id/Categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/categories"
        android:textColor="@color/MainButtonsText"
        app:layout_constraintBottom_toBottomOf="@+id/score_text"
        app:layout_constraintTop_toTopOf="@+id/score_text"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/text_score_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center_horizontal"
        android:text="@string/init_zero"
        android:textColor="@color/MainButtonsText"
        app:layout_constraintBottom_toBottomOf="@+id/text_question_textbuton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/image_score_counter"
        app:layout_constraintRight_toRightOf="@+id/image_score_counter"
        app:layout_constraintTop_toTopOf="@+id/text_question_textbuton"
        app:layout_constraintVertical_bias="0.6"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/sound_score_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:gravity="center_horizontal"
        android:text="@string/init_zero"
        android:textColor="@color/MainButtonsText"
        app:layout_constraintBottom_toBottomOf="@+id/sound_question_textbuton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/text_score_counter"
        app:layout_constraintRight_toRightOf="@+id/text_score_counter"
        app:layout_constraintTop_toTopOf="@+id/sound_question_textbuton"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/total_score_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="@string/init_zero"
        android:textColor="@color/MainButtonsText"
        app:layout_constraintBottom_toBottomOf="@+id/total_score"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/total_score"
        app:layout_constraintLeft_toRightOf="@+id/total_score"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.5" />

</android.support.constraint.ConstraintLayout>
